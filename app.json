{
  "expo": {
    "name": "찰나",
    "slug": "chalna",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/chalna-app-icon1.png",
    "scheme": "chalna",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "backgroundColor": "#000000",
      "bundleIdentifier": "com.anonymous.chalna",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "KAKAO",
            "CFBundleURLSchemes": [
              "chalna"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/chalna-app-icon1.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "chalna"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/chalna-app-icon1.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/chalna-app-icon1.png",
          "imageWidth": 200,
          "resizeMode": "cover",
          "backgroundColor": "#000000",
          "dark": {
            "image": "./assets/images/chalna-app-icon1.png",
            "backgroundColor": "#000000"
          },
          "light": {
            "image": "./assets/images/chalna-app-icon1.png",
            "backgroundColor": "#0000FF"
          }
        }
      ],
      "expo-web-browser",
      [
        "@react-native-seoul/kakao-login",
        {
          "kakaoAppKey": "cd8ddfc145a849f19e915e54d5dce6f6"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/chalna-app-icon1.png",
          "color": "#ffffff",
          "sounds": [],
          "mode": "production"
        }
      ],
      "expo-build-properties"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
